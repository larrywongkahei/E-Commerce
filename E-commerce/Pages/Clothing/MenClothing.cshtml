@page
@model E_commerce.Pages.MenClothingModel
@{
}


<div class="d-flex">
    <div style="width: 20%;">
        Here is for selector
    </div>
    <div class="d-flex flex-wrap" style="width: 80%">
        @foreach (var product in Model.MenClothesFromJson)
        {
        <a class="card" style="height:374px; margin-bottom:8px;margin-right:8px;width:24%;text-decoration:none; color:black" asp-page="../ShowProduct" asp-route-name="@product.Title">
            <div style="height:50%; display:flex; justify-content:center">
                    <img style="height:100%;margin-top:10px" src="@product.Img" />
            </div>
            <div class="card-body" style="height:50%">
                <p class="card-text-2" style="font-size:large;">@product.Title</p>
                <div>
                    @for (var i = 0; i < 5; i++)
                    {
                        <span style="" class="@(i <= product.Rating.rate ? "fa fa-star checked rating " : "far fa-star rating")"></span>
                    }
                    <span class="count">@product.Rating.count</span>
                </div>
                <p class="">£@product.Price</p>
            </div>
        </a>
        }
    </div>
</div>
