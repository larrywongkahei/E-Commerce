@page
@model E_commerce.Pages.LaptopsModel
@{
}

<div class="d-flex">
    <div style="width: 20%;">
        Here is for selector
    </div>
    <div class="d-flex flex-wrap" style="width: 80%">
        @foreach (var product in Model.Laptops)
        {
            <a class="card" style="height:374px; margin-bottom:8px;margin-right:8px;width:24%;text-decoration:none; color:black" asp-page="../ShowProduct" asp-route-name="@product.Title">
                <img style="height:50%" src="@product.Thumbnail" />
                <div class="card-body" style="height:50%">
                    <p class="card-text-2" style="font-size:large;">@product.Title</p>
                    <div>
                        @for (var i = 0.5; i < 5; i++)
                        {
                            <span class="@(i <= product.Rating ? "fa fa-star checked rating " : "far fa-star rating")"></span>
                        }
                    </div>
                    <p class="">£@product.Price</p>
                </div>
                </a>
        }
    </div>
</div>